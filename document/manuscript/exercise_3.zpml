    <word><so>名</so><sh>{cal}</sh><ja>そのこと</ja></word>
    <word><so>名</so><sh>{nodom}</sh><ja>嘘</ja></word>
    <word><so>名</so><sh>{amerikas}</sh><ja>アメリカ</ja></word>
  </word-list>

</exercise>